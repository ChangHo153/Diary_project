<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_des_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/imgbtn_pleasure"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher_pleasure">
        </ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_anger"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_pleasure"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_angry"></ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_sad"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_anger"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_sad"></ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_joy"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_sad"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_joy"></ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_love"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_joy"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_love"></ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_hatred"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_love"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_hatred"></ImageButton>

        <ImageButton
            android:id="@+id/imgbtn_craving"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="0sp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/imgbtn_hatred"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title"
            app:srcCompat="@mipmap/ic_launcher_craving"></ImageButton>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_des_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbtn_pleasure">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:singleLine="true"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="#E040FB"
            android:text="확인"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>